<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userItemTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sortItemTextView"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewDesc"
        android:layout_width="54dp"
        android:layout_height="55dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/sortItemTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sort_ascending" />

    <ImageView
        android:id="@+id/imageViewAsc"
        android:layout_width="55dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewDesc"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sort_descending" />
</androidx.constraintlayout.widget.ConstraintLayout>